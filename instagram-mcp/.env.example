# ========================================
# SUPABASE CONFIGURATION
# ========================================
SUPABASE_URL=https://xrbzofqgyukkdjwumdft.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ========================================
# INSTAGRAM GRAPH API
# ========================================
# How to get these:
# 1. Create Facebook App at developers.facebook.com
# 2. Add Instagram Graph API product
# 3. Get long-lived access token
# 4. Connect Instagram Business Account

INSTAGRAM_ACCESS_TOKEN=your_instagram_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_id_here

# Optional: Multiple business accounts (comma-separated)
# INSTAGRAM_BUSINESS_ACCOUNTS=id1,id2,id3

# ========================================
# MCP SERVER CONFIGURATION
# ========================================
MCP_SERVER_PORT=3000
MCP_SERVER_NAME=storit-instagram-mcp

# Check interval for automation (milliseconds)
# Default: 300000 (5 minutes)
CHECK_INTERVAL=300000

# Story verification timeout (milliseconds)
# How long to wait before marking as "not found"
# Default: 86400000 (24 hours)
VERIFICATION_TIMEOUT=86400000

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info
# Options: error, warn, info, debug

LOG_TO_FILE=true
LOG_FILE_PATH=./logs/mcp-server.log

# ========================================
# INSTAGRAM API SETTINGS
# ========================================
# Rate limiting
API_RATE_LIMIT=200
API_RATE_WINDOW=3600000

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=5000

# ========================================
# FEATURES
# ========================================
# Enable/disable automation
ENABLE_AUTOMATION=true

# Enable/disable real-time monitoring
ENABLE_REALTIME_MONITORING=true

# Auto-verify stories
AUTO_VERIFY_STORIES=true

# ========================================
# NOTIFICATIONS (Future)
# ========================================
# SLACK_WEBHOOK_URL=
# EMAIL_NOTIFICATIONS=false
